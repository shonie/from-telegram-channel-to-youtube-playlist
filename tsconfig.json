{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "target": "es6",
    "lib": ["es6"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "typeRoots": ["./typings"]
  },
  "include": ["./src"]
}
